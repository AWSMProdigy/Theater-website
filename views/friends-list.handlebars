<div class="container">
    <div id="content" class="row my-5">
        <div class="col-5">
                <img id="profile-picture" src="img/popcorn.jpg" class="mb-4" alt=""/>
                <div class="profile-header-info col-7">
                    <h3 id="profile-user">{{myUser.username}}</h3>
                    <a href="#" class="btn btn-xs bg-black text-white mb-2">Edit Profile</a>
                </div>
        </div>
        <div class="col-7">
            <div class="tab-pane fade active show" id="profile-friends">
                    <div>
                        <h5>Friends List</h5>
                    </div>
                    <ul class="friends-list">
                        {{#each myUser.list_friends as |friend|}}
                        {{> friends-details}}
                        {{/each}}
                    </ul>
            </div>
            <div class="tab-pane fade active show" id="profile-friends">
                <div class="m-b-10">
                    <h5>Pending friend requests</h5>
                </div>
                <ul class="friends-list">
                    {{#each myPending.list_friends as |friend|}}
                    {{> pending-details}}
                    {{/each}}
                </ul>
            </div>
            <div class="" id="profile-friends">
                <div class="m-b-10">
                    <h5>Incoming friend requests</h5>
                </div>
                <ul class="friends-list">
                    {{#each incomingFriends}}
                        {{#dataValues}}
                        {{> incoming-details}}
                        {{/dataValues}}
                    {{/each}}
                </ul>
            </div>
            <form class='addFriend-form'>
                    <label for="addFriend-input"><h5>Add a new friend</h5></label>
                    <input class="form-input" type="text" id="addFriend-input" placeholder="Enter username" />
                    <button class="btn bg-black text-white mt-2" type="submit">Add Friend</button>
            </form>
        </div>
    </div>
    <div class="row">
        <h3>Upcoming Showings</h3>
    </div>
    <div class="row">
        <div class="movies">
                {{#each myUser.movies as |movie|}}
                {{> profile-movies}}
                {{/each}}
        </div>
    </div>
</div>

<script src="./js/addFriend.js"></script>